# Backend Environment Variables
# Copy this file to .env and update values as needed

# Server Configuration
PORT=4000
NODE_ENV=production

# Storage Configuration
# Options: 'memory' (default, no disk writes) or 'disk' (saves to DOWNLOADS_PATH)
TORRENT_STORAGE_MODE=memory
DOWNLOADS_PATH=./downloads

# CORS Configuration
# Use '*' for Tailscale/private networks, or specify exact origins
# Example: CORS_ORIGIN=http://localhost:3000,http://100.106.121.5:3000
CORS_ORIGIN=*

# Torrent Management
# Automatically delete all torrents when last client disconnects
AUTO_DELETE_ON_DISCONNECT=true

# Pause torrent download when video is paused
TORRENT_PAUSE_ON_VIDEO_PAUSE=true
